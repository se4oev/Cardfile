<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.spb.reshenie.javatasks.ui.SignInPanel">
   <children>
      <VBox alignment="CENTER" layoutX="106.0" prefHeight="200.0" prefWidth="300.0" spacing="20.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <children>
            <Label text="Введите данные для подключения к БД" />
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="Пользователь:" />
                  <TextField fx:id="userField" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="50.0">
               <children>
                  <Label text="Пароль:" />
                  <PasswordField fx:id="passwordField" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
            <Button defaultButton="true" mnemonicParsing="false" onAction="#handleConnect" text="Подключиться" />
         </children>
      </VBox>
   </children>
</AnchorPane>
